{% extends 'base.html.twig' %}

{% block body %}
    <h1>Wallet</h1>

    <table class="table" width="100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wallet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wallet.name }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ wallet.balance }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline">
        <li>
            <a href="{{ path('wallet_index') }}" class="btn btn-default">Back</a>
        </li>
        <li>
            <a href="{{ path('wallet_edit', { 'id': wallet.id }) }}" class="btn btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
