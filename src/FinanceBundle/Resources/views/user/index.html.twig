{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table class="table " width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-default">Create a new user</a>
{% endblock %}
