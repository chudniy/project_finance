{% extends 'base.html.twig' %}

{% block body %}
    <h1>Payments list</h1>

    <table class="table " width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
                <th>Walletfrom</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td><a href="{{ path('payment_show', { 'id': payment.id }) }}">{{ payment.id }}</a></td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.category }}</td>
                <td>{{ payment.description }}</td>
                <td>{{ payment.walletFrom }}</td>
                <td>{% if payment.date %}{{ payment.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('payment_show', { 'id': payment.id }) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('payment_edit', { 'id': payment.id }) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payment_new') }}" class="btn btn-default">Create a new payment</a>

{% endblock %}
